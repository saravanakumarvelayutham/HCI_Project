{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "types": ["node"]
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "trace": true,
    "strictInjectionParameters": true,
    "preserveWhitespaces": true,
    "fullTemplateTypeCheck": true,
    "allowSyntheticDefaultImports" : true,
    "module": "esNext"
  }
}
